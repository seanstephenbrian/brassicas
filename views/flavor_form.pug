extends layout 

block content 
    h1 #{title}

    form(class='flavor-form' method='POST' action='')
        div.form-section.name-section
            label(for='name') Flavor Name:
            input#name.form-input(
                type='text',
                placeholder='Name of flavor',
                name='flavor',
                required='true',
                value=(undefined === flavor ? '' : flavor.flavor)
            )
        button(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg