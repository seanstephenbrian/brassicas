extends layout 

block content 
    h1= title 

    div(class='cultivar-info')
        div(class='cultivar-name') #{cultivar_data.name}
        div(class='cultivar-species') Species: 
            a(href=cultivar_data.species.url) #{cultivar_data.species.name}
        div(class='cultivar-plants') Plant varieties in this cultivar:
            ul
                each plant in cultivar_plants 
                    li 
                        a(href=plant.url) #{plant.name}
